//--------------------------------------------------------------------
//#region                         Logic
//--------------------------------------------------------------------

if timeframe.period != "30" and timeframe.period != "60"
    runtime.error("The report can not compute data on the chart's timeframe. Please navigate to the 1-hour or 30-minute timeframes.")

isInRange = time(timeframe.period, "0000-0000", getTimezone()).isInRangeFilter()

isInSession = not na(time(timeframe.period, sessionInput, getTimezone()))

[sessionStarted, sessionEnded] = sessionChange()

if isInRange and isInSession

    // Reset the top and bottom on a new day/session.
    
    if sessionStarted
        top.price       := na
        top.time        := na
        bottom.price    := na
        bottom.time     := na

    // Track the top and bottom.

    if na(top.price) or high > top.price
        top.price       := high
        top.time        := time
    
    if na(bottom.price) or low < bottom.price
        bottom.price    := low
        bottom.time     := time


// Collect data on the closing of the bar of the day/session.

isValidDayType = isValidBarType(sessionStarted, sessionEnded)

if isInRange and barstate.isconfirmed

    // On a day/session change, collect the preceding day/session top and bottom.
    // Valid day/session per type filter
    // Can collect the first day/session after the start of the time range
    
    if isValidDayType and not na(top.time[1]) and not na(bottom.time[1])
        _topHour     = getHour(top.time[1])
        _bottomHour  = getHour(bottom.time[1])

        _topCount    = nz(topsByHourMap.get(_topHour)) +1
        _bottomCount = nz(bottomsByHourMap.get(_bottomHour)) +1

        topsByHourMap.put   (_topHour,    _topCount)
        bottomsByHourMap.put(_bottomHour, _bottomCount)

        log.info("\nâ² Top at {0} ({1}/{4})\nâ¼ Bottom at {2} ({3}/{4})", _topHour, _topCount, _bottomHour, _bottomCount, topsByHourMap.values().sum())


    // On hourly time change, collect the open time and preceding close time.
    // The times will be displayed in the tooltips of category labels.

    _barHour     = getHour(time)
    _prevBarHour = getHour(time[1])

    if _prevBarHour != _barHour
        openTimesByHourMap.put (_barHour,     str.format_time(time, "HH:mm", getTimezone()))
        closeTimesByHourMap.put(_prevBarHour, str.format_time(time_close[1], "HH:mm", getTimezone()))

