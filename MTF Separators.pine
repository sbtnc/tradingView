// @function Produce the `timeframe` parameter from the given user string input.
// @returns  string
method param(simple string input) =>
    switch input 
        "5 seconds"  => "5S"
        "10 seconds" => "10S"
        "15 seconds" => "15S"
        "30 seconds" => "30S"
        "1 minute"   => "1"
        "2 minutes"  => "2"
        "3 minutes"  => "3"
        "5 minutes"  => "5"
        "10 minutes" => "10"
        "15 minutes" => "15"
        "30 minutes" => "30"
        "1 hour"     => "60"
        "2 hours"    => "120"
        "3 hours"    => "180"
        "4 hours"    => "240"
        "6 hours"    => "360"
        "8 hours"    => "480"
        "12 hours"   => "720"
