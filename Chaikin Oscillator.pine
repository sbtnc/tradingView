// @version=5
indicator(title="Chaikin Oscillator", shorttitle="Chaikin Osc")

//------------------------------ Inputs ------------------------------

fast = input.int(3, minval=1, title="Fast Length")
slow = input.int(10, minval=1, title="Slow Length")

//------------------------------ Colors ------------------------------

color_negative = #ff4e3e
color_positive = #3fbe53
color_neutral = #656565

//------------------------------- Logic ------------------------------

// orignal logic
osc = ta.ema(ta.accdist, fast) - ta.ema(ta.accdist, slow)

positive = osc > 0

//------------------------- Plotting & styling ------------------------

transp_area = 92
transp_osc = 20
transp_zero = 100

color = positive ? color_positive : color_negative

zero = plot(0, color=color.new(color_neutral, transp_zero), title="zero")
chaikinOsc = plot(osc, color=color.new(color_neutral, transp_osc), title="Chaikin Oscillator")

fill(zero, chaikinOsc, color=color.new(color, transp_area), title="area")
